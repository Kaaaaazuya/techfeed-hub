<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test files from certain checks -->
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <!-- Exclude generated code -->
    <Match>
        <Package name="~.*\.generated\..*"/>
    </Match>

    <!-- Exclude known false positives -->
    <Match>
        <Class name="~.*\.dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude serialization warnings for entities -->
    <Match>
        <Class name="~.*\.entity\..*"/>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- Exclude repository constructor pattern - common in DI frameworks -->
    <Match>
        <Class name="~.*Repository"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude constructor throw warnings for entities -->
    <Match>
        <Class name="~.*\.entity\..*"/>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>

    <!-- Exclude dead local store warnings - often false positives -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>

</FindBugsFilter>